pipeline {
  agent any 
  tools {
    maven 'M2_HOME'
    jdk 'JAVA_HOME'
  }
  stages {
 
    stage("Mvn clean") {
      
      steps {
        echo 'cleaning the application ...'
        sh "mvn clean"
      }
    }
    stage("Mvn compile") {
      
      steps {
        echo 'compiling the application ...'
        sh "mvn compiler:compile"
      }

    }
    stage("Mvn test") {
      
      steps {

        sh "mvn test"
      }

    }
	stage("MVN SONARQUBE"){
   steps{
   sh "mvn sonar:sonar \
   -Dsonar.projectKey=Ayoub \
   -Dsonar.host.url=http://192.168.1.25:9000\
   -Dsonar.login=b43f4280745c436312a7957efe09480f7353603f"
  }
}
stage("Nexus") {
      
      steps {

        sh "mvn deploy -DskipTests"
      }

    }
    stage("Building Docker Image") {
                steps{
                    sh 'docker build -t ayoub26/achat .'
                }
        }

           stage("Login to DockerHub") {
                steps{
                   // sh 'sudo chmod 666 /var/run/docker.sock'
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u ayoub26 -p azerty123'
                }
        }
        stage("Push to DockerHub") {
                steps{
                    sh 'docker push ayoub26/achat'
                }
        }
    
               stage("Docker-compose") {
                steps{
                    sh 'docker-compose up -d'
                }
        }
    }
post {
        success {
             mail to: "ayoubselmani26@gmail.com",
                    subject: "Build sucess",
                    body: "sucess"
            echo 'successful'
        }
        failure {
             mail to: "ayoubselmani26@gmail.com",
                    subject: "Build failed",
                    body: "failed"
            echo 'failed'
        }
      }
 }
